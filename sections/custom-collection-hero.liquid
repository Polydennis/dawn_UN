{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="isolate{% unless section.settings.full_width %} page-width{% endunless %}">
  <div
    class="category-header gradient{% if section.settings.full_width %} category-header--full-width{% endif %} section-{{ section.id }}-padding"
    style="background: url('{{ section.settings.image | img_url: '1024x1024' }}') no-repeat center center; background-size: cover;"
  >
    <h1>{{ section.settings.title }}</h1>
  </div>
  <div class="collection-hero__text-wrapper rte" style="margin-top:1em;">
    <div class="collection-hero__description rte center">
      {{ section.settings.description }}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom Collection Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Your Custom Title Here"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "Enter your description here"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full Width",
      "default": false
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Default Hero",
      "category": "Custom Collection Hero",
      "settings": {
        "image": "",
        "title": "Your Custom Title Here",
        "description": "Enter your description here",
        "full_width": false,
        "padding_top": 20,
        "padding_bottom": 20
      }
    }
  ]
}
{% endschema %}
