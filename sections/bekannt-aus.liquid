<!-- bekannt-aus.liquid -->

<div class="bekannt-aus-section">
  <div class="logo-container">
    {% for block in section.blocks %}
      {% if block.settings.logo_image != blank %}
        {% if block.settings.logo_link != blank %}<a href="{{ block.settings.logo_link }}" target="_blank" class="logo-link">{% endif %}
          <img src="{{ block.settings.logo_image | img_url: 'master' }}" alt="Logo" class="logo-image" />
        {% if block.settings.logo_link != blank %}</a>{% endif %}
      {% endif %}
    {% endfor %}
  </div>
</div>

<style>
.bekannt-aus-section .logo-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 20px;
}

.bekannt-aus-section .logo-link {
  display: block;
}

.bekannt-aus-section .logo-image {
  height: 80px; /* Einheitliche Höhe für alle Logos */
  object-fit: contain;
  filter: grayscale(100%);
  transition: all 0.3s ease;
}

.bekannt-aus-section .logo-link:hover .logo-image {
  filter: grayscale(0%);
  transform: scale(1.05);
}

/* Anpassungen für mobile Geräte */
@media (max-width: 767px) {
  .bekannt-aus-section .logo-container {
    flex-wrap: nowrap;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
  }

  .bekannt-aus-section .logo-link {
    flex: 0 0 auto;
  }

  .bekannt-aus-section .logo-container::-webkit-scrollbar {
    display: none; /* Scrollbar ausblenden (optional) */
  }
}
</style>

{% schema %}
{
  "name": "Bekannt aus",
  "settings": [],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo_image",
          "label": "Logo Bild"
        },
        {
          "type": "url",
          "id": "logo_link",
          "label": "Logo Link"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Bekannt aus",
      "category": "Sektionen"
    }
  ]
}
{% endschema %}
