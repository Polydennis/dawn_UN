    "custom_liquid_G8jmit": {
      "type": "custom-liquid",
      "settings": {
        "custom_liquid": "<style>\n  .collection__icons {\n    display: flex; \n    flex-wrap: wrap; \n    justify-content: space-between;\n    align-items: center;\n  }\n  .collection__icon {\n    display: flex;\n    align-items: center;\n    flex: 1 1 20px;\n    margin: 10px;\n  }\n  .collection__icon img {\n    margin-right: 10px;\n  }\n  .collection__icon p {\n    margin: 0;\n    text-align: left;\n  }\n  @media (max-width: 768px) {\n    .collection__icons {\n      flex-direction: column;\n    }\n    .collection__icon {\n      flex-direction: row;\n      align-items: center;\n      width: 100%;\n    }\n    .collection__icon img {\n      width: 40px;\n      height: 40px;\n      margin-right: 10px;\n    }\n    .collection__icon p {\n      line-height: 1; \n      text-align: left;\n    }\n  }\n<\/style>\n\n<div class=\"page-width\">\n  <div class=\"collection__icons\">\n    {% assign measure_icon_shown = false %}\n    {% assign motive_icon_shown = false %}\n    {% assign color_icon_shown = false %}\n\n    {% for product in collection.products %}\n      {% if product.metafields.custom.labels.value != blank %}\n        {% if product.metafields.custom.labels.value contains 'Individuelle Maße' and measure_icon_shown == false %}\n          <div class=\"collection__icon\">\n            <img src=\"{{ 'Icons_Format.png' | file_img_url }}\" alt=\"Individuelle Maße\" class=\"label-ico\" width=\"60\" height=\"60\">\n            <p><b>Individuelle Maße<\/b><br \/>\n            Motiv und Schnitt werden kostenlos auf Maß angepasst.<\/p>\n          <\/div>\n          {% assign measure_icon_shown = true %}\n        {% endif %}\n        {% if product.metafields.custom.labels.value contains 'Verschiebbare Einzelmotive' and motive_icon_shown == false %}\n          <div class=\"collection__icon\">\n            <img src=\"{{ 'Icons_Anpassung.png' | file_img_url }}\" alt=\"Verschiebbare Einzelmotive\" class=\"label-ico\" width=\"60\" height=\"60\">\n            <p><b>Verschiebbare Einzelmotive<\/b><br \/>\nMit diesem Label sind die Einzelelemente verschiebbar.<\/p>\n          <\/div>\n          {% assign motive_icon_shown = true %}\n        {% endif %}\n        {% if product.metafields.custom.labels.value contains 'Auswählbare Farben' and color_icon_shown == false %}\n          <div class=\"collection__icon\">\n            <img src=\"{{ 'Icons_Farben.png' | file_img_url }}\" alt=\"Auswählbare Farben\" class=\"label-ico\" width=\"60\" height=\"60\">\n            <p><b>Auswählbare Farben<\/b><br \/>\nMit diesem Label kannst du Farben frei wählen.<\/p>\n          <\/div>\n          {% assign color_icon_shown = true %}\n        {% endif %}\n      {% endif %}\n    {% endfor %}\n  <\/div>\n<\/div>",
        "color_scheme": "background-1",
        "padding_top": 0,
        "padding_bottom": 0
      }
